<% @join_users.each do |user| %>
	<%= image_tag user.logo.url(:thumb) %>
<% end %>
<h2><%= @project.name %></h2>
<h4><%= @project.category %></h4>
<h4><%= @project.location %></h4>
<h4><%= @project.status %></h4>
<h4><%= @project.startdate %></h4>
<h4><%= @project.deadline %></h4>
<p><%= @project.vision%></p>
<p><%= @project.story%></p>
<p><%= @project.description%></p>
<% @project.categories.each do |category| %>
	<span class="label label-primary"><%= category.name %></span>
<% end %>
<% set_images_url(@project, "medium").each do |picture_url| %>
	<%= image_tag  picture_url%>
<% end %>
<h4>職缺</h4>
<hr style="height:2px;border:none;color:#333;background-color:#333;" />
<table class="table table-hover">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Categroy</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>發起人</td>
			<td>我是發起人</td>
		</tr>
		<% @project.positions.each do |position| %>
			<tr>
				<td><%= position.name %></td>
				<td><%= position.description %></td>
				<td><%= position.category %></td>
			</tr>
		
		<% end %>
	</tbody>
</table>

<%= link_to "", projects_path, :class => "btn btn-lg btn-info glyphicon glyphicon-share-alt"%>